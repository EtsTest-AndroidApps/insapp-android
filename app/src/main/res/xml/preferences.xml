<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/settings_profile">

        <android.support.v7.preference.EditTextPreference
            android:title="@string/settings_name"
            android:key="name"
            android:summary="@string/settings_name_summary"
            android:dialogLayout="@layout/pref_dialog_edittext_fix" />

        <android.support.v7.preference.ListPreference
            android:title="@string/settings_sex"
            android:key="sex"
            android:summary="@string/settings_sex_summary"
            android:defaultValue="unknown"
            android:entries="@array/listArraySex"
            android:entryValues="@array/listValuesSex" />

        <android.support.v7.preference.ListPreference
            android:title="@string/settings_class"
            android:key="class"
            android:summary="@string/settings_class_summary"
            android:defaultValue="unknown"
            android:entries="@array/listArrayClass"
            android:entryValues="@array/listValuesClass" />

        <android.support.v7.preference.EditTextPreference
            android:title="@string/settings_mail"
            android:key="email"
            android:summary="@string/settings_mail_summary"
            android:dialogLayout="@layout/pref_dialog_edittext_fix" />

        <android.support.v7.preference.EditTextPreference
            android:title="@string/settings_description"
            android:key="description"
            android:summary="@string/settings_description_summary"
            android:dialogLayout="@layout/pref_dialog_edittext_fix" />
    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/settings_amicaliste">

        <android.support.v7.preference.PreferenceScreen
            android:key="barcode_preferences"
            android:title="@string/settings_barcode_add"
            android:summary="@string/settings_barcode_disclaimer"
            android:persistent="false">

            <android.support.v7.preference.EditTextPreference
                android:title="@string/settings_barcode_input"
                android:key="barcode"
                android:maxLength="9"
                android:inputType="number"
                android:summary="@string/settings_barcode_input_summary"
                android:dialogLayout="@layout/pref_dialog_edittext_fix" />

            <android.support.v7.preference.PreferenceScreen
                android:key="key"
                android:title="@string/settings_barcode_camera"
                android:summary="@string/settings_barcode_camera_summary">
                <intent
                    android:targetPackage="fr.insapp.insapp"
                    android:targetClass="fr.insapp.insapp.activities.BarcodeDetectorActivity" />
            </android.support.v7.preference.PreferenceScreen>

        </android.support.v7.preference.PreferenceScreen>

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/settings_options">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:title="@string/settings_notifications"
            android:defaultValue="true"
            android:summary="@string/settings_notifications_summary"
            android:key="notifications" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:title="@string/settings_calendar"
            android:defaultValue="false"
            android:summary="@string/settings_calendar_summary"
            android:key="calendar" />
    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>