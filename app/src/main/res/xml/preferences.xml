<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings_profile">

        <EditTextPreference
            android:key="name"
            android:title="@string/settings_name"
            android:summary="@string/settings_name_summary"
            android:dialogLayout="@layout/pref_dialog_edittext_fix_single_line" />

        <ListPreference
            android:key="sex"
            android:title="@string/settings_sex"
            android:summary="@string/settings_sex_summary"
            android:defaultValue="unknown"
            android:entries="@array/listArraySex"
            android:entryValues="@array/listValuesSex" />

        <ListPreference
            android:key="class"
            android:title="@string/settings_class"
            android:summary="@string/settings_class_summary"
            android:defaultValue="unknown"
            android:entries="@array/listArrayClass"
            android:entryValues="@array/listValuesClass" />

        <EditTextPreference
            android:key="email"
            android:title="@string/settings_mail"
            android:summary="@string/settings_mail_summary"
            android:dialogLayout="@layout/pref_dialog_edittext_fix"/>

        <EditTextPreference
            android:key="description"
            android:title="@string/settings_description"
            android:summary="@string/settings_description_summary"
            android:dialogLayout="@layout/pref_dialog_edittext_fix" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_amicaliste">

        <PreferenceScreen
            android:key="barcode_preferences"
            android:title="@string/settings_barcode_add"
            android:summary="@string/settings_barcode_disclaimer"
            android:persistent="false">

            <EditTextPreference
                android:key="barcode_dialog"
                android:title="@string/settings_barcode_input"
                android:summary="@string/settings_barcode_input_summary"
                android:dialogLayout="@layout/pref_dialog_edittext_fix" />

            <PreferenceScreen
                android:key="barcode_camera"
                android:title="@string/settings_barcode_camera"
                android:summary="@string/settings_barcode_camera_summary" />

        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/shortcut_notification">

        <SwitchPreference
            android:key="notifications_posts"
            android:title="@string/notification_posts_name"
            android:summary="@string/notification_posts_description"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="notifications_events"
            android:title="@string/notification_events_name"
            android:summary="@string/notification_events_description"
            android:defaultValue="true" />

        <PreferenceScreen
            android:key="notifications_system"
            android:title="@string/notification_system_name"
            android:summary="@string/notification_system_description" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/shortcut_events">

        <SwitchPreference
            android:key="calendar"
            android:title="@string/settings_calendar"
            android:summary="@string/settings_calendar_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>