<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">

        <TextView
            android:id="@+id/name_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3e3e3e"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/going_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_event"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:id="@+id/date_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/going_event"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/thumbnail_event"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_gravity="end"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_weight="0.1"
        android:src="@drawable/avatar_1stpi_female" />
</LinearLayout>