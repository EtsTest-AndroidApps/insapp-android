<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_club_event"
        android:src="@drawable/sample_0"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/name_event"
        android:text="Le nom de l'event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3e3e3e"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/avatar_club_event"
        android:layout_alignTop="@id/avatar_club_event" />

    <TextView
        android:id="@+id/going_event"
        android:text="4 participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar_club_event"
        android:layout_below="@id/name_event"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/date_event"
        android:text="18h30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar_club_event"
        android:layout_below="@id/going_event"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp" />
</RelativeLayout>