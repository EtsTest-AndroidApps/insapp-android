<resources>

    <style name="InsappMaterialTheme" parent="InsappMaterialTheme.Base"></style>

    <!-- Base application theme -->

    <style name="InsappMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/MenuItem</item>
        <item name="android:itemBackground">@android:color/white</item>

        <!-- Theme for the preferences -->

        <item name="preferenceTheme">@style/AppPreferenceTheme</item>

        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->

        <item name="alertDialogTheme">@style/AppAlertDialogTheme</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">

    </style>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MenuItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>