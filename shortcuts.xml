<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:shortcutId="events"
        android:enabled="true"
        android:icon="@drawable/ic_event_24dp"
        android:shortcutShortLabel="@string/shortcut_events"
        android:shortcutLongLabel="@string/shortcut_events_long"
        android:shortcutDisabledMessage="@string/shortcut_events_disabled">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="fr.insapp.insapp.activities.MainActivity">
            <extra android:name="FRAGMENT_ID" android:value="1"/>
        </intent>
        <!--<categories android:name="android.shortcut.conversation"/>-->
    </shortcut>

    <shortcut
        android:shortcutId="notification"
        android:enabled="true"
        android:icon="@drawable/ic_notifications_active_24dp"
        android:shortcutShortLabel="@string/shortcut_notification"
        android:shortcutLongLabel="@string/shortcut_notification_long"
        android:shortcutDisabledMessage="@string/shortcut_notification_disabled">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="fr.insapp.insapp.activities.MainActivity">
            <extra android:name="FRAGMENT_ID" android:value="3"/>
        </intent>
        <!--<categories android:name="android.shortcut.conversation"/>-->
    </shortcut>

    <shortcut
        android:shortcutId="profil"
        android:enabled="true"
        android:icon="@drawable/ic_person_24dp"
        android:shortcutShortLabel="@string/shortcut_profil"
        android:shortcutLongLabel="@string/shortcut_profil_long"
        android:shortcutDisabledMessage="@string/shortcut_profil_disabled">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="fr.insapp.insapp.activities.MainActivity"/>
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="fr.insapp.insapp.activities.ProfileActivity"/>
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>

</shortcuts>